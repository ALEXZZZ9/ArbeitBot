{
  "root": true,
  "env": {
      "es6": true,
      "node": true,
      "mongo": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "promise"
  ],
  "rules": {
    "require-jsdoc": 2,
    "promise/catch-or-return": 2,
    "indent": [ "warn", 2 ],
    "linebreak-style": [ "warn", "unix" ],
    "quotes": [ "warn", "single" ],
    "semi": [ "warn", "always" ]
  }
}
